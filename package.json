{
  "name": "yogchumbak-11ty",
  "version": "1.0.0",
  "description": "Yog Chumbak - Therapeutic Iyengar Yoga & Pranic Healing Studio",
  "main": "index.js",
  "scripts": {
    "build": "eleventy",
    "start": "eleventy --serve",
    "build:prod": "npm run build && npm run minify",
    "minify": "npm run minify:css && npm run minify:js",
    "minify:css": "postcss src/css/*.css --use cssnano -d _site/css --no-map",
    "minify:js": "terser src/js/*.js --compress --mangle -d _site/js",
    "optimize:images": "node scripts/optimize-images.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "yoga",
    "iyengar",
    "pranic-healing",
    "therapy",
    "wellness"
  ],
  "author": "Yog Chumbak",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@11ty/eleventy": "^3.1.2",
    "@11ty/eleventy-img": "^6.0.4",
    "cssnano": "^6.0.0",
    "postcss": "^8.4.0",
    "postcss-cli": "^11.0.0",
    "sharp": "^0.33.5",
    "terser": "^5.26.0"
  }
}
